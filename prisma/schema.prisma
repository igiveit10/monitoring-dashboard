// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Target {
  id             String      @id @default(cuid())
  keyword        String
  url            String      @unique
  currentStatus  String? // 정답셋 통검노출: "노출" 또는 "미노출"
  csvPdfExposure Boolean     @default(false) // 정답셋 PDF 노출 (비고와 독립적)
  note           String? // 타겟별 비고 텍스트 (날짜별이 아닌 타겟 고정)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  runResults     RunResult[]

  @@index([url])
}

model Run {
  id        String      @id @default(cuid())
  runDate   String      @unique // YYYY-MM-DD format
  createdAt DateTime    @default(now())
  results   RunResult[]
}

model RunResult {
  id                 String   @id @default(cuid())
  runId              String
  targetId           String
  foundAcademicNaver Boolean  @default(false)
  isPdf              Boolean  @default(false)
  httpStatus         Int?
  finalUrl           String?
  checkedAt          DateTime @default(now())
  errorMessage       String?
  rawEvidencePath    String?
  myComment          String?  // 날짜별 비고 (임시로 RunResult에 저장)

  run    Run    @relation(fields: [runId], references: [id], onDelete: Cascade)
  target Target @relation(fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([runId, targetId])
  @@index([runId])
  @@index([targetId])
}

model UploadHistory {
  id          String   @id @default(cuid())
  fileName    String
  filePath    String
  recordCount Int
  uploadedAt  DateTime @default(now())
}
